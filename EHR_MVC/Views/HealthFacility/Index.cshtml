@model IEnumerable<EHR_MVC.DTOs.HealthFacilityDTOs.HealthFacilityDTOForOthers>

@{
    ViewData["Title"] = "Index";
}
 
<br />
<hr />
<h1 style="text-align:center">Health Facilities</h1>
<hr />
<br />

<div class="row m-2">
    <a asp-action="Create" class="btn btn-primary col-12"> Create New </a>
</div>
<hr />
<br />

<table class="table table-hover">
    <thead>
        <tr class="table-danger">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubordinateTo)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubordinateTo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
