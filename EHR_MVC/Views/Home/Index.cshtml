@model EHR_MVC.Models.HomeData

@{
    ViewData["Title"] = "Home Page";
}
 
<br />
<br />
<div class="text-center">   
    <h4 class="display-4 m-2" style="text-align:left">Governorates</h4>
    <div class="row text-center">
        @foreach (var item in Model.Governorates)
        {

            <div class="card m-auto" style="width: 18rem;">
                <img src="\images\static\Gov.png" class="card-img-top" alt="@item.Title" style="height:200px">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <a asp-area="Admin" asp-controller="Governorate" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>

        }
        <a asp-area="" asp-controller="Governorate" asp-action="Index" class="w-100 d-block btn btn-danger m-3 p-2">All Governorates</a>
        <br />
        <br />
    </div>
</div>
