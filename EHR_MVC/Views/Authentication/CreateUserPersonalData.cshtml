            </div>
            <div class="form-group">
                <label asp-for="PersonalData.BirthDate" class="control-label"></label>
                <input asp-for="PersonalData.BirthDate" class="form-control" />
                <span asp-validation-for="PersonalData.BirthDate" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="PersonalData.GovernorateId" class="control-label"></label>
                <select asp-for="PersonalData.GovernorateId" class="form-select" asp-items="@Model.GovernoratesList">
                    <option disabled selected>Select Governorate</option>
                </select>
                <span asp-validation-for="PersonalData.GovernorateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalData.Address" class="control-label"></label>
                <input asp-for="PersonalData.Address" class="form-control" />
                <span asp-validation-for="PersonalData.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalData.Phone1" class="control-label"></label>
                <input asp-for="PersonalData.Phone1" class="form-control" />
                <span asp-validation-for="PersonalData.Phone1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalData.EmergencyPhone1" class="control-label"></label>
                <input asp-for="PersonalData.EmergencyPhone1" class="form-control" />
                <span asp-validation-for="PersonalData.EmergencyPhone1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalData.EmergencyPhone2" class="control-label"></label>
                <input asp-for="PersonalData.EmergencyPhone2" class="form-control" />
                <span asp-validation-for="PersonalData.EmergencyPhone2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalData.Gender" class="control-label"></label>
                <input asp-for="PersonalData.Gender" class="form-control" />
                <span asp-validation-for="PersonalData.Gender" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                Image:<input class="form-control" accept="image/*" type="file" name="image" id="upFile1" />
            </div>
             
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
 
    </div>
</div>

<div>
    <a asp-action="UserData">Back to My Data</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
