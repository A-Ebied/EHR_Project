}

<h1>CreateUserPersonalData</h1>

<h4>PersonalDataCreateDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUserPersonalData" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>

            @* @{
            var c = @User.Claims;
            var s = @User.Claims;
            }*@
            <input hidden asp-for="PersonalData.Id" value="@User.Claims.ToList()[0].Value" />
            <div class="form-group">
                <label asp-for="PersonalData.Occupation" class="control-label"></label>
                <input asp-for="PersonalData.Occupation" class="form-control" />
                <span asp-validation-for="PersonalData.Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalData.NumOfChildren" class="control-label"></label>
                <input asp-for="PersonalData.NumOfChildren" class="form-control" />
