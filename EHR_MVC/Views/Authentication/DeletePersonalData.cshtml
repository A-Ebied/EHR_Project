@model EHR_MVC.DTOs.UserDataDTOs.PersonalDataDTOs.PersonalDataDTOForOthers

@{
    ViewData["Title"] = "Delete Personal Data";
}

<br />
<hr />
<h2 style="text-align:center">Are you sure you want to delete this Personal Data?</h2>
<hr />
<br />
 
<div class="col-md-5 m-auto">
    <dl class="row">
         
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.UserImageUrl" class="card-img-top" alt="No Image" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Occupation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Occupation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
    </dl>
    
    <form asp-action="DeletePersonalData">
        <div class="form-group m-3 p-3">
            <input type="submit" value="Delete" class="btn btn-danger" /> ||
            <a asp-action="UserData" asp-route-id="@Model.Id">Back to My Data</a>
        </div>
    </form>
</div>
